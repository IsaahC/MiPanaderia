@page
@model Panaderia.Pages.Productos.Crear
@{
    ViewData["Title"] = "Crear";
}



<div class="row">
    <div class="col-md-8 mx-auto rounded border p-4">
        <h2 class="text-center mb-5">Editar venta</h2>
        
        @if(Model.ErrorMessage.Length > 0){
            <div class="alert alert-danger alert-dismissibe fade show" role="alert">
                <strong>@Model.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        }
        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Id_venta</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly asp-for="Id_venta" />
                    
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Productos</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Productos" />
                    <span asp-validation-for="Productos" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Membresia</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Membresia" />
                    <span asp-validation-for="Membresia" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Encargado</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Encargado" />
                    <span asp-validation-for="Encargado" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Total</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Total" />
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Metodo</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Metodo" />
                    <span asp-validation-for="Metodo" class="text-danger"></span>
                </div>
            </div>
            

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="=button btn-primary">Terminado</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Productos/Index" role="button">Regresar</a>
                </div>
            </div>
        </form>

</div>
</div>