@page
@model LoginModel
@{
    ViewData["Title"] = "Home page";
}

<div class="d-flex align-items-center justify-content-between container-fluid">
    <!-- Sección de bienvenida -->
    <div class="welcome-container">
        <h1 class="display-4">Bienvenido</h1>
        <p class="welcome-message">Descubre nuestros deliciosos productos recién horneados y déjate cautivar por el
            aroma del pan fresco.</p>
        <div class="carousel-container">
            <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/Imagenes/image1.jpg" class="d-block w-100" alt="Imagen 1">
                    </div>
                    <div class="carousel-item">
                        <img src="/Imagenes/image2.jpg" class="d-block w-100" alt="Imagen 2">
                    </div>
                    <div class="carousel-item">
                        <img src="/Imagenes/image3.jpg" class="d-block w-100" alt="Imagen 3">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>



    <!-- Sección de inicio de sesión -->
    <div class="login-container text-center">
        <h2 class="mb-3">Iniciar Sesión</h2>

        <form method="post">
            <div class="mb-3">
                <label for="nombreUsuario" class="form-label">Nombre de Usuario</label>
                <input type="text" class="form-control" id="nombreUsuario" name="NombreUsuario"
                    value="@Model.NombreUsuario" />
            </div>
            <div class="mb-3">
                <label for="contrasena" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="contrasena" name="Contrasena" />
            </div>
            <button type="submit" class="btn btn-primary w-100">Ingresar</button>
        </form>
    </div>
</div>

<footer>
    <div class="logo-container">
        <img src="/Imagenes/pan.jpeg">
    </div>
</footer>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #fdf5e6;
        /* Fondo cálido */
        color: #5a3d31;
        /* Color de texto */
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .container-fluid {
        flex: 1;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 2rem;
    }

    .welcome-container {
        max-width: 50%;
    }

    .welcome-container h1 {
        color: #c96a43;
        /* Encabezado cálido */
        text-shadow: 1px 1px 2px #5a3d31;
    }

    .welcome-message {
        font-size: 1.25rem;
        color: #5a3d31;
    }

    .btn {
        background-color: #c96a43;
        color: #fff;
        border: none;
        transition: background-color 0.3s;
    }

    .btn:hover {
        background-color: #5a3d31;
    }

    .login-container {
        max-width: 30%;
        background-color: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .login-container h2 {
        color: #c96a43;
        margin-bottom: 1.5rem;
    }

    footer {
        position: fixed;
        bottom: 0;
        right: 0;
        padding: 10px;
        background: none;
    }

    .logo-container img {
        max-height: 100px;
        max-width: 100px;
    }
</style>
